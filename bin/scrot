#!/bin/sh

# Directorio de destino para las capturas de pantalla
destination_dir="/home/alyssa/screenshots/"

# Verificar si el directorio de destino existe, de lo contrario, crearlo
if [ ! -d "$destination_dir" ]; then
  mkdir "$destination_dir"
fi

# Nombre de archivo basado en la fecha y hora actual
filename="$(date +'%Y%m%d_%H%M%S').png"

# Ruta completa del archivo de destino
destination_path="$destination_dir/$filename"

# Capturar la captura de pantalla y guardarla en el directorio de destino
scrot "$destination_path"
