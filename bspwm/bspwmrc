#! /bin/sh

pkill sxhkd
pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         0
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a St state=floating
bspc rule -a Brave-browser-nightly desktop=^2
bspc rule -a Min desktop=^3
bspc rule -a Pictureinpicture state=floating

xsetroot -cursor_name left_ptr &

# feh
#. ~/.fehbg
hsetroot -fill $HOME/wal.jpg
# Picom
picom --animations --animation-for-open-window zoom &
# Polybar
bash $HOME/.config/polybar/launch.sh
