#! /bin/sh

pkill sxhkd
pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         1.5
bspc config normal_border_color "#313244"
bspc config focused_border_color "#eba0ac"
bspc config window_gap          12

bspc config split_ratio          0.52
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc rule -a st-256color state=floating
bspc rule -a Brave-browser-nightly desktop=^3
bspc rule -a Min desktop=^2
bspc rule -a Virt-manager desktop=^5

# picom
# picom --animations --animation-for-open-window zoom &

# Polybar
sh $HOME/.config/polybar/launch.sh &

# xsetroot
xsetroot -cursor_name left_ptr &
hsetroot -fill $HOME/dotfiles/wallpapers/output.jpg
