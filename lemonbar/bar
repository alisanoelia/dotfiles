#!/bin/sh

. "$HOME/.config/lemonbar/colors.sh"

# Colors
background=$background
b="%{B-}"
c0="%{B$color0}"
c1="%{B$color1}"
c2="%{B$color2}"
c3="%{B$color3}"
c4="%{B$color4}"
c5="%{B$color5}"
c6="%{B$color6}"
c7="%{B$color7}"
c8="%{B$color8}"
c9="%{B$color9}"
c10="%{B$color10}"
c11="%{B$color11}"
c12="%{B$color12}"
c13="%{B$color13}"
c14="%{B$color14}"
c15="%{B$color15}"

Hora() {
  h=$(date +'%A %d-%m-%Y %I:%M %p')
  echo "󰥔 $h"
}

Wifi() {
	SSID=$(iwgetid -r)

  if [ -z "$SSID" ]; then
    # Si no hay SSID, estás conectado por cable
    if ping -q -c 1 -W 2 8.8.8.8 >/dev/null 2>&1; then
      echo "󰈀 Cable"
    else
      echo "󰈂 Disconnected"
    fi
  else
    if ping -q -c 1 -W 2 8.8.8.8 >/dev/null 2>&1; then
      echo "󰖩 $SSID"
    else
      echo "󰖪 Disconnected"
    fi
  fi
}

IP() {
	local_ip=$(ip addr show | grep "inet " | awk '{split($2, a, "/"); print a[1]}' | grep -v "127.0.0.1")
	echo "$local_ip"
}
Batery() {
  BATERY=$(cat /sys/class/power_supply/BATT/capacity)
  STATUS=$(cat /sys/class/power_supply/BATT/status)

  if [ "$BATERY" -ge 90 ]; then
    ICON=""
  elif [ "$BATERY" -ge 70 ]; then
    ICON=""
  elif [ "$BATERY" -ge 40 ]; then
    ICON=""
  elif [ "$BATERY" -ge 20 ]; then
    ICON=""
  else
    ICON=""   
  fi
  echo "$ICON $BATERY% $STATUS"
}

Workspaces() {
  ACTUAL=$(xprop -root _NET_CURRENT_DESKTOP | awk '{print $3}')
  case $ACTUAL in
    0)
      echo "$c3  $b 󰖟     "
    ;;
    1)
      echo "  $c3 󰖟 $b    "
    ;;
    2)
      echo "   󰖟 $c3  $b  "
    ;;
    3)
      echo "   󰖟   $c3  $b "
    ;;
    4)
      echo "   󰖟     "
    ;;
  esac
}

Title() {
  len=$(echo -n "$(xdotool getwindowfocus getwindowname)" | wc -m)
  max_len=15
  if [ "$len" -gt "$max_len" ]; then
    echo -n "$(xdotool getwindowfocus getwindowname | cut -c 1-$max_len)..."
  else
    echo -n "$(xdotool getwindowfocus getwindowname)"
  fi
}

Disk() {
	disk=$(df -h | grep "sda2" | awk '{print $4}')
	echo " $disk"
}

User() {
  user=$(echo $USER)
  echo " $user" 
}

while true; do
  echo "%{l}$(Workspaces) | $(Title) %{r}$(User) | $(Disk) | $(Batery) | $(Wifi) | $(IP) | $(Hora) "
	sleep 1s
done | lemonbar -d -p -f "RobotoMono Nerd Font:size=8" -B $background -F "#ffffff"  -g 950x20+233+5 & 
